{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./src",

    "types": ["bun-types"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "composite": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
