{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noFallthroughCasesInSwitch": true,
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./src",

    "types": ["bun-types"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "composite": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
